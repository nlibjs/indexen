{
  "name": "@nlib/indexen",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.2.9",
  "license": "Apache-2.0",
  "author": {
    "name": "Kei Ito",
    "email": "kei.itof@gmail.com",
    "url": "https://gojabako.zone"
  },
  "homepage": "https://github.com/nlibjs/indexen",
  "repository": "https://github.com/nlibjs/indexen",
  "engines": {
    "node": ">=14"
  },
  "type": "module",
  "main": "./esm/indexen.mjs",
  "files": [
    "esm",
    "!**/*.test.*"
  ],
  "bin": {
    "indexen": "./esm/cli.mjs",
    "nlib-indexen": "./esm/cli.mjs"
  },
  "scripts": {
    "build": "tsc",
    "test": "run-s build test:*",
    "test:unit": "ava",
    "lint": "eslint src",
    "version": "npx @nlib/changelog --output CHANGELOG.md && git add CHANGELOG.md"
  },
  "dependencies": {
    "commander": "11.1.0",
    "fast-glob": "3.3.3"
  },
  "devDependencies": {
    "@nlib/changelog": "0.3.2",
    "@nlib/eslint-config": "3.20.5",
    "@nlib/githooks": "0.2.2",
    "@types/node": "20.19.11",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "8.43.0",
    "ava": "5.3.1",
    "eslint": "8.57.1",
    "lint-staged": "14.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "3.6.2",
    "typescript": "5.9.2"
  },
  "eslintConfig": {
    "extends": [
      "@nlib/eslint-config"
    ],
    "env": {
      "node": true
    }
  },
  "ava": {
    "files": [
      "esm/**/*.test.{ts,tsx,js,mjs,cjs,jsx}"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.*(m|c)+(j|t)s*(x)": "eslint"
  },
  "renovate": {
    "extends": [
      "github>nlibjs/renovate-config"
    ]
  }
}
