{
    "name": "@nlib/indexen",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.2.0",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/indexen",
    "repository": "https://github.com/nlibjs/indexen",
    "engines": {
        "node": ">=14"
    },
    "type": "module",
    "main": "./lib/indexen.mjs",
    "files": [
        "lib"
    ],
    "bin": {
        "indexen": "./lib/cli.mjs",
        "nlib-indexen": "./lib/cli.mjs"
    },
    "scripts": {
        "build": "run-s build:*",
        "build:tsc": "tsc",
        "build:esmify": "esmify \"lib/**\"",
        "test": "run-s test:*",
        "test:build": "run-s test:build:*",
        "test:build:tsc": "tsc",
        "test:build:esmify": "esmify --keepSourceMap \"lib/**\"",
        "test:unit": "ava",
        "lint": "eslint --ext .ts src",
        "version": "run-s version:changelog version:add",
        "version:changelog": "npx @nlib/changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "dependencies": {
        "commander": "9.3.0",
        "fast-glob": "3.2.11"
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.18.0",
        "@nlib/esmify": "0.1.2",
        "@nlib/githooks": "0.1.0",
        "@types/node": "17.0.36",
        "@typescript-eslint/eslint-plugin": "5.27.0",
        "@typescript-eslint/parser": "5.27.0",
        "ava": "4.3.0",
        "eslint": "8.16.0",
        "lint-staged": "12.5.0",
        "npm-run-all": "4.1.5",
        "typescript": "4.7.3"
    },
    "eslintConfig": {
        "extends": [
            "@nlib/eslint-config"
        ],
        "env": {
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        },
        "ignorePatterns": [
            "lib/**"
        ]
    },
    "ava": {
        "files": [
            "lib/**/*.test.{ts,tsx,js,mjs,cjs,jsx}"
        ]
    },
    "lint-staged": {
        "*.{ts,tsx,js,mjs,cjs,jsx}": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
