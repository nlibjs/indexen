{
    "name": "@nlib/indexen",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.2.5",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://gojabako.zone"
    },
    "homepage": "https://github.com/nlibjs/indexen",
    "repository": "https://github.com/nlibjs/indexen",
    "engines": {
        "node": ">=14"
    },
    "type": "module",
    "main": "./lib/indexen.mjs",
    "files": [
        "lib",
        "!**/*.test.*"
    ],
    "bin": {
        "indexen": "./lib/cli.mjs",
        "nlib-indexen": "./lib/cli.mjs"
    },
    "scripts": {
        "build": "run-s build:*",
        "build:tsc": "tsc",
        "build:esmify": "esmify \"lib/**\"",
        "test": "run-s test:*",
        "test:build": "run-s test:build:*",
        "test:build:tsc": "tsc",
        "test:build:esmify": "nlib-esmify --keepSourceMap \"lib/**\"",
        "test:unit": "ava",
        "lint": "eslint --ext .ts src",
        "postversion": "run-s postversion:*",
        "postversion:changelog": "nlib-changelog --output CHANGELOG.md",
        "postversion:add": "git add .",
        "postversion:amend": "git commit -m \"$(git log -1 --format=%s)\" --amend"
    },
    "dependencies": {
        "commander": "9.4.1",
        "fast-glob": "3.2.12"
    },
    "devDependencies": {
        "@nlib/changelog": "0.2.3",
        "@nlib/eslint-config": "3.18.0",
        "@nlib/esmify": "0.3.2",
        "@nlib/githooks": "0.1.0",
        "@types/node": "18.11.14",
        "@typescript-eslint/eslint-plugin": "5.46.1",
        "@typescript-eslint/parser": "5.46.1",
        "ava": "4.3.3",
        "eslint": "8.29.0",
        "lint-staged": "13.1.0",
        "npm-run-all": "4.1.5",
        "typescript": "4.9.4"
    },
    "eslintConfig": {
        "extends": [
            "@nlib/eslint-config"
        ],
        "env": {
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        },
        "ignorePatterns": [
            "lib/**"
        ]
    },
    "ava": {
        "files": [
            "lib/**/*.test.{ts,tsx,js,mjs,cjs,jsx}"
        ]
    },
    "lint-staged": {
        "*.{ts,tsx,js,mjs,cjs,jsx}": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
